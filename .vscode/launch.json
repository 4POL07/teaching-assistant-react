{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch React Client",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3004",
      "webRoot": "${workspaceFolder}/client/src",
      "sourceMaps": true
    },
    {
      "name": "Start React Client",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/client/node_modules/.bin/react-scripts",
      "args": ["start"],
      "cwd": "${workspaceFolder}/client",
      "console": "integratedTerminal",
      "env": {
        "BROWSER": "none",
        "PORT": "3004"
      }
    },
    {
      "name": "Start Node Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/node_modules/.bin/ts-node-dev",
      "args": ["--respawn", "--transpile-only", "src/server.ts"],
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack",
      "configurations": ["Start Node Server", "Start React Client"],
      "stopAll": true
    }
  ]
}